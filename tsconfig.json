{
    "ts-node": {
        "transpileOnly": true,
        "scope": true
    },
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noEmit": false,
        "allowJs": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "es2020"
        ],
        "baseUrl": ".",
        "outDir": "dist",
        "experimentalDecorators": true,
        "declaration": false,
        "sourceMap": true,
        "paths": {
            "config/*": [
                "src/config/*"
            ],
            "data": [
                "src/data/index.ts"
            ],
            "data/*": [
                "src/data/*"
            ],
            "utils/*": [
                "src/utils/*"
            ],
            "test/*": [
                "test/*"
            ]
        }
    },
    "exclude": [
        "**/node_modules"
    ]
}